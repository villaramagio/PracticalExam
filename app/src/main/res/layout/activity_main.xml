<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/LightGreen"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView"
            android:layout_height="80dp"
            android:layout_width="130dp"
            android:src="@drawable/chopper"/>

        <ImageView
            android:id="@+id/imageView2"
            android:layout_height="80dp"
            android:layout_width="130dp"
            android:src="@drawable/nico"/>

        <ImageView
            android:id="@+id/imageView3"
            android:layout_height="80dp"
            android:layout_width="130dp"
            android:src="@drawable/sanji"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@color/LightGreen"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="80dp"
            android:layout_height="130dp"
            android:text=" Tony Chopper"
            android:layout_marginLeft="23dp"
            android:textSize="20sp"
            android:textColor="@color/WhiteSmoke"
            android:textAlignment="center"
            />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="80dp"
            android:layout_height="130dp"
            android:text=" Nico Robin"
            android:layout_marginLeft="45dp"
            android:textSize="20sp"
            android:textColor="@color/WhiteSmoke"
            android:textAlignment="center"
            />

        <TextView
            android:id="@+id/textView"
            android:layout_width="80dp"
            android:layout_height="130dp"
            android:text=" Sanji"
            android:layout_marginLeft="49dp"
            android:textSize="20sp"
            android:textColor="@color/WhiteSmoke"
            android:textAlignment="center"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="348dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="156dp"
            android:background="#C4ABFE"
            android:orientation="horizontal">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView8"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:text="NOTE 1" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="129dp"
                        android:padding="10dp"
                        android:text="Grizzly is the oldest of the brothers. Although he is the charismatic, jovial, and a highly motivated leader, Grizzly is not the brightest bear in the bunch. " />
                </LinearLayout>

            />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imageView5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="187dp"
            android:background="#C4ABFE"
            android:orientation="horizontal">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView9"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:text="NOTE 2" />

                    <TextView
                        android:id="@+id/textView7"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:text="The youngest in the family, Ice Bear is a bear of few words. Heâ€™s a bit odd and outwardly eccentric " />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imageView8"
                        android:layout_width="match_parent"
                        android:layout_height="125dp"/>

                    <TextView
                        android:id="@+id/textView10"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="We Bare Bears"
                        android:textSize="25sp"
                        android:textStyle="italic" />
                </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>